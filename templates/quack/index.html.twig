{% extends 'base.html.twig' %}

{% block title %}Quack index{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center">QuackNet</h1>
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        {% for quack in quacks %}
            <div class="card mb-3">
                <div class="card-header">
                    <img width="100" height="100" src="{{ quack.author.image }}">
                    <p>
                        <small class="text-muted">{{ quack.author.duckname }} à écrit le
                            {{ quack.createdAt ? quack.createdAt|date('Y-m-d H:i:s') : '' }}</small>
                    </p>
                </div>
                <div class="card-body">
                    <p class="card-text">{{ quack.content }}</p>

                </div>
                <img src="{{ quack.image }}" class="card-img-top">
                <div class="card">
                    <p> Tags :
                        {% for tag in quack.tags %}
                            <span class="badge badge-warning">{{ tag }}</span>
                        {% endfor %}
                    </p>
                </div>
                <div class="card-footer">


                    <div class="card" id="collapse_{{ quack.id }}">
                        {% for comment in quack.children %}
                            <div class="card-header">
                                <img width="100" height="100" src="{{ comment.author.image }}">
                                <p>
                                    <small class="text-muted">{{ comment.author.duckname }} à écrit le
                                        {{ comment.createdAt ? comment.createdAt|date('Y-m-d H:i:s') : '' }}</small>
                                </p>
                            </div>
                            <div class="card-body">
                                <p>{{ comment.content }}</p>
                            </div>
                            <div class="card">
                                <p> Tags :
                                    {% for tag in quack.tags %}
                                        <span class="badge badge-warning">{{ tag }}</span>
                                    {% endfor %}
                                </p>
                            </div>
                            <div class="card-footer">
                                <a class="btn btn-success" href="{{ path('quack_show', {'id': comment.id}) }}">show</a>
                                {% if is_granted('quack_edit', comment) %}
                                    <a class="btn btn-success"
                                       href="{{ path('quack_edit', {'id': comment.id}) }}">edit</a>
                                {% endif %}
                            </div>
                        {% endfor %}
                    </div>
                    <a class="btn btn-success" href="{{ path('quack_show', {'id': quack.id}) }}">show</a>
                    <a class="btn btn-info" href="{{ path('quack_new_comment', {'parent': quack.id}) }}">add
                        comment</a>
                    {% if is_granted('ROLE_USER') and is_granted('quack_edit', quack ) %}
                        <a class="btn btn-success" href="{{ path('quack_edit', {'id': quack.id}) }}">edit</a>

                    {% endif %}
                </div>
            </div>

        {% else %}
            <div class="card-body">
                <td colspan="4">no records found</td>
            </div>
        {% endfor %}

        {% if is_granted('ROLE_USER') %}
            <a class="btn btn-success" href="{{ path('quack_new') }}">Create new</a>
        {% endif %}
    </div>

{% endblock %}
